{% if is_granted('ROLE_USER') %}
    <dialog class="modal-overlay modal-login modal-dark" id="panel">
        <div class="modal-close modal-close__panel" id="close_modal_panel">
            <i class="fas fa-window-close fa-2x"></i>
        </div>
        <div class="nav-user__profile row">
            <div class="nav-user__profile-avatar col-3 left">
                {% if avatar|default %}
                <img class="icon-avatar icon-avatar-medium" src="{{ app.user.avatarUrl }}" alt="Avatar">
                {% else %}
                <img class="icon-avatar icon-avatar-medium" src="{{ app.user.avatarUrl }}" alt="Avatar">
                {% endif %}
            </div>
            <div class="nav-user__profile-account col-8 right">
                <div class="nav-user__profile-email">
                    {% if email|default %}
                    {{ email }}
                    {% endif %}
                </div>

                <div class="nav-user__profile-name">
                    {% if firstname|default and lastname|default %}
                    {{ firstname }} {{ lastname }}
                    {% endif %}
                </div>
            </div>
        </div>
        
        <ul class="nav-user__list nav-user__list--ul">
            {% if is_granted('ROLE_ADMIN_ARTICLE') %}
                <li class="nav-user__list--li">
                    <a href="{{ path('admin_article_list') }}" class="btn btn-blue btn-block">
                        <i class="fa fa-book float-left" title="Artykuły"></i>
                        Artkuły
                    </a>
                </li>
            {% endif %}
        
            <li class="nav-user__list--li">
                <a href="{{ path('app_account') }}" class="btn btn-blue btn-block">
                    <i class="fa fa-street-view float-left" title="Panel użytkownika"></i>
                    Panel użytkownika
                </a>
            </li>
    
            <li class="nav-user__list--li">
                <a href="{{ path('file_manager') }}" class="btn btn-blue btn-block">
                    <i class="fas fa-photo-video float-left" title="Manager zdjęć"></i>
                    Manager zdjęć
                </a>
            </li>
    
            {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-user__list--li">
                <a href="{{ path("admin_dashboard_list") }}" class="btn btn-blue btn-block">
                    <i class="fas fa-users-cog float-left" title="Użytkownicy"></i>
                    Użytkownicy
                </a>
            </li>
            {% endif %}
    
            <li class="nav-user__list--li">
                <a href="{{ path('admin_animal_list') }}" class="btn btn-blue btn-block">
                    <i class="fas fa-frog float-left" title="Zwierzęta"></i>
                    Zwierzęta
                </a>
            </li>
    
            <li class="nav-user__list--li">
                <a href="{{ path('app_logout') }}" class="btn btn-orange btn-block">
                    <i class="fas fa-sign-out-alt float-left" title="Wyloguj się"></i>
                    Wyloguj się
                </a>
            </li>
    
            <li class="nav-user__list--li nav-user__social">
                <a href="https://facebook.com/FundacjaZwierzetaNiczyje/?ref=m_notif&notif_t=group_highlights"
                    class="social-icon" target="_blank">
                    <i class="fab fa-facebook-square icon-facebook icon-link fa-lg"></i>
                </a>
    
                <a href="https://instagram.com/fundacja_zwierzeta_niczyje?utm_source=ig_profile_share&igshid=1joz9gcb9eiem"
                    class="social-icon" target="_blank">
                    <i class="fab fa-instagram icon-instagram icon-link fa-lg"></i>
                </a>
            </li>
        </ul>
    </dialog>
{% endif %}