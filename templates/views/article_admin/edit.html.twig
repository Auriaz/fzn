{% extends "article_admin/_base.html.twig" %}

{% block dashboard_title %}{{ title }}{% endblock %}

{% block dashboard_adding_btn %}
    <a href="{{ path('admin_article_list')}}" class="dashboard-section__adding-btn btn btn-outline-secondary" title="Cofnij do listy artykułów">
        <i class="fas fa-share"></i>
    </a>
{% endblock %}

{% block dashboard_body %}

<div class="row">
    <div class="col-sm-8">
        <h3>Dane edycji</h3>
        <hr>
        {{ include('article_admin/_form.html.twig', {
            button_text: 'Aktualizuj'
        }) }}
    </div>

    <div class="col-sm-4">
        <h3>Dodaj zdjecie</h3>
<hr>
        <ul class="list-group small reference-list" data-url="{{ path('admin_article_list_references', { id: article.id }) }}"></ul>

        <hr>

        <form action="{{ path('admin_article_add_reference', { id: article.id })}}" 
            method="POST" 
            enctype="multipart/form-data"
            class="dropzone reference-dropzone"></form>
    </div>
</div>
{% endblock %}